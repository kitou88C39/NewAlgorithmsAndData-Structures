import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int l = sc.nextInt(), n = sc.nextInt(), k = sc.nextInt();

        int[] a = new int[k]; // 配列 a のサイズを k + 1 に修正
        for (int i = 0; i < k; i++) {
            a[i] = sc.nextInt();
        }

        // 配列の末尾に l を追加

        // 変数 left, right をそれぞれ 0 と l + 1 で初期化

        // left と right の差が 1 でない間
        // 変数 mid に (left + right) / 2 を代入

        // 前回の切れ目の位置を表す変数 last と切り分けた個数を表す変数 count を 0 で初期化

        // i を 0 から k まで繰り返す
        // もし a[i] - last が mid 以上なら
        // last に a[i] を代入し、count を 1 増やす

        // もし count が n 以上なら
        // left を mid で更新
        // そうでなければ
        // right を mid で更新

        // left を出力
    }
}
